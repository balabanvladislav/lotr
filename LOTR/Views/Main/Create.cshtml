@model LOTR.Domain.Comment
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Create";
}
<div style="width: 800px; margin: auto">
<h2 >Comment</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CommentText,"Add a comment", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CommentText, new { htmlAttributes = new { @class = "form-control", @type="textarea", placeholder="Comment.."} })
                @Html.ValidationMessageFor(model => model.CommentText, "", new { @class = "text-danger" })
            </div>
        </div>
        @{
            DateTime today = DateTime.Now;
        }
        <div class="form-group">
            <div class="col-md-10">
                <input type="hidden" value="@today.ToString()" name="DateTime" />
                <input type="hidden" value="@User.Identity.GetUserName()" name="CommentAuthor" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" style="width:100px; height:50px;" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <br/>
    @Html.ActionLink("Back to site", "Index")
</div>

</div>